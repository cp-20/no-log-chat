{
  "name": "nextjs-latest-starter",
  "version": "0.5.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:tsuki-lab/nextjs-latest-starter.git"
  },
  "author": "hanetsuki <me@tsuki-lab.net> (https://github.com/tsuki-lab)",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "yarn pathpida -w",
    "dev:css-module-types": "yarn css-module-types -w",
    "build": "yarn pathpida && next build",
    "start": "next start",
    "pathpida": "pathpida -p .gitignore -o ./src/lib -s",
    "css-module-types": "tcm -p '**/*.module.scss' src",
    "lint": "eslint src --ext .tsx,.ts",
    "stylelint": "stylelint --ignore-path .gitignore './src/**/*.{css,scss}'",
    "fix": "yarn lint --fix && yarn stylelint --fix && yarn format",
    "typecheck": "tsc",
    "prettier": "prettier --config .prettierrc.json './**/*.{js,jsx,ts,tsx,json,md}'",
    "format": "yarn prettier --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^13.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ress": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "18.0.5",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "eslint": "^8.27.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^13.0.2",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.18.1",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "stylelint": "^14.14.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "typed-css-modules": "^0.7.2",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint",
    "*.{css,scss}": "yarn stylelint",
    "*.{css,scss,js,jsx,ts,tsx,json,md}": "yarn format"
  }
}
